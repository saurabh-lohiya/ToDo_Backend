// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  user_name     String?   @unique
  phone_number  String?
  birth_date    DateTime?
  password      String
  first_name    String?
  last_name     String?
  todoLists     TodoList[]
  accept_privacy_policy Boolean @default(true)
}

model TodoList {
  id          Int      @id @default(autoincrement())
  title       String   
  description String?
  status      TodoListStatus   @default(TODO)
  userId      Int
  start_date  DateTime?
  end_date    DateTime?
  user        User     @relation(fields: [userId], references: [id])
  tasks       Json?
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String
  createdAt DateTime @default(now())
  @@index([userId], name: "session_userId_index")
}

enum TodoListStatus {
  TODO
  IN_PROGRESS
  DONE
}